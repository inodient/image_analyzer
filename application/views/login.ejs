<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js" integrity="sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+" crossorigin="anonymous"></script>


	<link rel="stylesheet" href="/image.css">

	
	<link rel="icon" href="data:;base64,iVBORw0KGgo=">
	<meta charset="utf-8">
	<meta name="viewport"
	content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

	<!-- <meta http-equiv="Content-Security-Policy" content="default-src 'self'; font-src 'self' data: fonts.gstatic.com;"> -->



	<script>
		$(document).ready( function(){
			
	   		// Login Session Check - End
			$("#btn-submit").on( "click", function(){
				var opt = {
					type: "POST",
					url: "/authcheck",
					data: $("#login").serialize(),

					success: function( res ){

						if( res.STATUS === "S" ){
							$(location).attr( "href", "/list" );
						} else {
							$(location).attr( "href", "/" );
						}
					},
					error: function(){
						alert( "An error occured.\nPlease contact administrator." );
					}
				}

				$.ajax( opt );
			} );
    		// Login Session Check - End









			$("table tr td input").focusin( function(){
				$(this).parent().parent().css("background-color", "#555");
				$(this).parent().css("background-color", "#555");
				$(this).css("background-color", "#555");
			} );
			$("table tr td input").focusout( function(){
				$(this).parent().parent().css("background-color", "#333");
				$(this).parent().css("background-color", "#333");
				$(this).css("background-color", "#333");
			} );



			var marginTop = ( $(window).height() - $(".container-fluid").height() ) / 2;
			$(".container-fluid").css( "marginTop", marginTop - 30 );

		} );
	</script>

	<title>OIL ANALYZER</title>
</head>
<body style="background-color: #333">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-4 col-md-4">
				</div>
				
					<form name="login" id="login" method="post" action="/authcheck">

				
						<div class="col-lg-4 col-md-4 login-form">

							<div style="text-align: center">
								<span style="font-size: 15rem; text-align: center; color: white">
									<i class="fas fa-cogs"></i>
								</span>

								<h3 style="font-weight:700; color: white; text-align: center; margin-bottom: 3rem">
									OIL ANALYZER
								</h3>
							</div>

							<table clsss="table table-responsive" >
								<tr class="userid-tr">
									<td style="width: 1.25rem; height: 1.25rem;">
										<span>
											<i class="fas fa-user" style="color: white;"></i>
										</span>
									</td>
									<td>
										<input type="text" name="userid" id="userid" placeholder="USERID" required />
									</td>
								</tr>
								<tr class="password-tr">
									<td style="width: 1.25rem; height: 1.25rem;">
										<span>
											<i class="fas fa-unlock" style="color:white;"></i>
										</span>
									</td>
									<td>
										<input type="password" name="password" id="password" placeholder="PASSWORD" required />
									</td>
								</tr>
							</table>

							
							<table class="table table-responsive">
								<tr class="submit-tr">
									<td>
										<input type="button" name="btn-submit" id="btn-submit" placeholder="SUBMIT" value="LOGIN" style="font-weight: 700" />
									</td>
								</tr>
							</table>


							<div style="background-color: #333; color: #ededed; text-align:center; padding-top:2rem">
								
								<div>
									<p style="font-size: 1.5rem;" >
										Copyright(c) 2018 Part Hong Gyu<br>
										Beta-Test Version - v.0.0.1
									</p>
								</div>
							</div>

						</div>
					</form>
				
				<div class="col-lg-4 col-md-4">
				</div>
			</div>
		</div>

</body>
</html>